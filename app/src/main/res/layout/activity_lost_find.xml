<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:background="#8866ff00"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:text="手机防盗"
        android:id="@+id/textview"
        android:textSize="22sp"
        android:textColor="#000000"
        android:gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="8dip"
            android:layout_marginLeft="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全号码"
            android:textColor="#000000"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_safenumber"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dip"
            android:layout_marginLeft="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxx "
            android:textColor="#000000"
            android:textSize="20sp" />
</RelativeLayout>

        <View
            android:layout_marginTop="10dip"
            android:background="#44000000"
            android:layout_width="match_parent"
            android:layout_height="0.2dip"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="8dip"
            android:layout_marginLeft="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="防盗保护是否开启"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_protecting"
            android:layout_marginTop="8dip"
            android:layout_marginLeft="5dip"
            android:layout_alignParentRight="true"
            android:src="@drawable/unlock"
            android:layout_width="25dip"
            android:layout_height="25dip" />
</RelativeLayout>
        <View
            android:layout_marginTop="10dip"
            android:background="#44000000"
            android:layout_width="match_parent"
            android:layout_height="0.2dip"/>

        <TextView
            android:background="@drawable/shape_select"
            android:onClick="reEnterSetup"
            android:clickable="true"
            android:layout_marginTop="8dip"
            android:layout_marginLeft="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="重新进入设置向导"
            android:textColor="#000000"
            android:textSize="20sp" />
    <View
        android:layout_marginTop="5dip"
        android:background="#44000000"
        android:layout_width="match_parent"
        android:layout_height="0.2dip"/>
    <TextView
        android:background="#44000000"
        android:layout_marginTop="8dip"
        android:layout_marginLeft="5dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="功能简介"
        android:textColor="#000000"
        android:textSize="24sp" />
    <TextView
        style="@style/text_content_style"
        android:text="GPS追踪:#*location*#"
        android:drawableLeft="@android:drawable/star_big_on"
        />
    <TextView
        style="@style/text_content_style"
        android:text="播放报警音乐：#*alarm*#"
        android:drawableLeft="@android:drawable/star_big_on"
        />
    <TextView
    style="@style/text_content_style"
         android:text="远程删除数据：#*wipedata*#"
         android:drawableLeft="@android:drawable/star_big_on"
    />
    <TextView
    style="@style/text_content_style"
         android:text="远程锁屏：#*lockscreen*#"
         android:drawableLeft="@android:drawable/star_big_on"
    />
</LinearLayout>
